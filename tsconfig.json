{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "./typings"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
